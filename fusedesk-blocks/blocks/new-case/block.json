	"supports": {
		"html": false
	},
    "attributes": {
        "department": {
            "type": "string",
            "default": false
        },
        "rep": {
            "type": "string",
            "default": false
        },
        "casetagids": {
            "type": "array",
            "default": []
        },

        "hideknowndata": {
            "type": "boolean",
            "default": false
        },
        "sucessredirect": {
            "type": "string",
            "default": ""
        },

        "showtitle": {
            "type": "boolean",
            "default": false
        },
        "titletext": {
            "type": "string",
            "default": ""
        },
        "titleoptions": {
            "type": "string",
            "default": ""
        },

        "nametext": {
            "type": "string",
            "default": ""
        },
        "emailtext": {
            "type": "string",
            "default": ""
        },
        "buttontext": {
            "type": "string",
            "default": ""
        },
        "creatingtext": {
            "type": "string",
            "default": ""
        },
        "successtext": {
            "type": "string",
            "default": ""
        },

        "suggestionplacement": {
            "type": "string",
            "default": "after"
        },
        "suggestionstext": {
            "type": "string",
            "default": ""
