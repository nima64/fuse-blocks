        "anchor": {
            "type": "string",
            "default": ""
        },
        "style": {
            "type": "string",
            "default": "width: 100%;"
        },

        "repaintMe": {
            "type": "boolean",
            "default": false
        }
    },
	"textdomain": "fusedesk",
	"editorScript": "file:../../src/new-case.js",
